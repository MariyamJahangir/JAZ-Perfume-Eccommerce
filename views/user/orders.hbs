{{>header}}
<style>
    .nav-item:hover {
        background-color: #DFF2FA;
        /* Light blue background on hover */
        cursor: pointer;
        /* Add a pointer cursor for better UX */
    }

    .nav-item.active {
        background-color: #DFF2FA;
        /* Fixed light blue background for active */
    }
</style>

<section style="background-color: #DFF2FA;">
    <div class="container">
        <div class="row p-5">
            <h2>Welcome Mariyam Jahangir</h2>
        </div>

    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-2 mt-5">
                <nav class="d-flex flex-column p-3">
                    <a href="profile" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2"><i
                            class="bi bi-person-circle p-2"></i>Profile</a>
                    <a href="address" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2"><i
                            class="bi bi-cart4 p-2"></i>Address</a>
                    <a href="wishlist" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2"><i
                            class="bi bi-heart p-2"></i>Wishlist</a>
                    <a href="orders" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2 active"
                        aria-current="page"><i class="bi bi-truck p-2"></i>Orders</a>
                    <a href="password" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2"><i
                            class="bi bi-key p-2"></i>Password</a>
                    <a href="wallet" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2"><i
                            class="bi bi-wallet2 p-2"></i>Wallet</a>
                    <a href="logout" class="link-dark link-underline-opacity-0 nav-item rounded px-3 py-2 mb-2"><i
                            class="bi bi-box-arrow-right p-2"></i>Logout</a>
                </nav>
            </div>
            <div class="col-10">
                <div class="container m-4 p-4">
                    <h1 class="text-center pb-4">ALL ORDERS</h1>
                    {{#each orders}}
                    {{#each items}}
                        <div class="grid gap-1 d-flex justify-content-between border bg-light p-3">
                        <!-- Product Image -->
                        <div class="col-2 text-center p-2">
                            <img src="/uploads/{{productDetails.images.[0]}}" alt="{{productDetails.name}}" class="img-fluid">
                        </div>

                        <!-- Product Details -->
                        <div class="col-5">
                            <p>{{productDetails.name}} - {{productDetails.variant.quantityML}} ML</p>
                            <span>Rs. {{productDetails.variant.price}}</span>
                            <p class="fw-5">Ordered on: {{formatDate ../orderDate}}</p>
                            
                        </div>

                        <!-- Order Status -->
                        <div class="col-2 d-flex align-items-center">
                {{#if (isEqual status "Delivered")}}
                    <button type="button" class="btn btn-success rounded-circle p-1 m-2"></button>
                {{else if (isEqual status "Cancelled")}}
                    <button type="button" class="btn btn-danger rounded-circle p-1 m-2"></button>
                {{else if (isEqual status "Returned")}}
                    <button type="button" class="btn btn-warning rounded-circle p-1 m-2"></button>
                {{else if (isEqual status "Pending")}}
                    <button type="button" class="btn btn-secondary rounded-circle p-1 m-2"></button>
                {{else if (isEqual status "Processing")}}
                    <button type="button" class="btn btn-primary rounded-circle p-1 m-2"></button>
                {{else}}
                    <button type="button" class="btn btn-dark rounded-circle p-1 m-2"></button>
                {{/if}}
                <span>{{status}}</span>
            </div>

                        <!-- Action Buttons -->
                        <div class="col-2 d-flex align-items-center">
                            <div class="p-2">
                            <a href="/order-detail/{{../_id}}/{{_id}}" type="button" class="btn btn-outline-primary px-3">View</a>
                            </div>
                            {{!-- <div class="p-2">
                            <button type="button" class="btn btn-outline-danger">Cancel</button>
                            </div>
                            <div class="p-2">
                            <button type="button" class="btn btn-outline-warning" disabled>Return</button>
                            </div> --}}
                        </div>
                        </div>
                    {{/each}}
                    {{/each}}

                    

                </div>
            </div>
        </div>
    </div>
</section>


{{>footer}}