<link rel="stylesheet" href="/styles/products.css">



{{>header}}

<section>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="container mt-5">
                    <form class="p-3 border rounded" role="search" aria-label="Product filters">
                        <!-- Categories Section -->
                        <div class="mb-4">
                            <h5 class="fw-semibold text-start">Categories</h5>
                            <div class="list-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="parfum">
                                    <label class="form-check-label" for="parfum">Eau De Parfum</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="concentrated">
                                    <label class="form-check-label" for="concentrated">Concentrated</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="deodorants">
                                    <label class="form-check-label" for="deodorants">Deodorants</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="bodymist">
                                    <label class="form-check-label" for="bodymist">Body Mist</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="dakhoon">
                                    <label class="form-check-label" for="dakhoon">Dakhoon</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="combo">
                                    <label class="form-check-label" for="combo">Combo</label>
                                </div>
                            </div>
                        </div>

                        
                        <!-- Quantity Section -->
                        <div class="mb-4">
                            <h5 class="fw-semibold text-start">Variant</h5>
                            <div class="btn-group" role="group" aria-label="Select quantity">
                                <button type="button" class="btn btn-outline-secondary active">50 ML</button>
                                <button type="button" class="btn btn-outline-secondary">100 ML</button>
                                <button type="button" class="btn btn-outline-secondary">200 ML</button>
                                <button type="button" class="btn btn-outline-secondary">400 ML</button>
                            </div>
                        </div>

                        <!-- Price Section -->
                        <div>
                            <h5 class="fw-semibold text-start">Price</h5>
                            <div class="mt-3">
                                <input type="range" class="form-range" min="0" max="1000" value="500" id="priceRange1">
                                <input type="range" class="form-range" min="0" max="1000" value="750" id="priceRange2">
                                <div class="text-end mt-2">
                                    <span class="badge bg-dark">$ 1000.00</span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-9">
                <div class="container mt-5">
                    <h4>Applied Filter:</h4>
                    <div class="row">
                        <div class="d-flex flex-wrap gap-2">
                            <div class="border rounded-pill p-1 d-flex align-items-center">
                                <span class="px-2">Eau De Parfum</span>
                                <button type="button" class="btn-close small" disabled aria-label="Close"></button>
                            </div>
                            <div class="border rounded-pill p-1 d-flex align-items-center">
                                <span class="px-2">Concentrated</span>
                                <button type="button" class="btn-close small" disabled aria-label="Close"></button>
                            </div>
                        </div>
                    </div>

                </div>



                <div class="container py-5">
                    <div class="row text-center d-flex justify-content-around">
                        <!-- Product Card -->
                        {{#each products}}
                        {{#if (isEqual deleted false)}}
                        <div class="col-md-4 p-4">
                            <div class="card text-center">
                                <a href="/user/product-details/{{_id}}"><img src="/uploads/{{images.[0]}}" class="card-img-top" alt="Product Image" style="width: 100%; height: 280px; object-fit: cover;"></a>
                                <button type="button" class="btn-hover btncartbtm">Add to Cart</button>
                            </div>
                            <div class="card-body px-0">
                                <h6 class="card-title pt-2">{{name}}</h6>
                                <div class="d-flex justify-content-between align-items-center pe-4">
                                    <button type="button"
                                        class="btn btn-outline-secondary rounded-pill py-0 my-2 btnpill ">{{stock}}</button>
                                    <p class="card-text text-muted"> $ {{price}}</p>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>

                </div>


            </div>



        </div>
    </div>
</section>



{{>footer}}