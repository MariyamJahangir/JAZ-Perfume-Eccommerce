<script>
  document.querySelectorAll('.toggle-status').forEach((button) => {
    button.addEventListener('click', async (event) => {
        event.preventDefault(); // Prevent default behavior

        const userId = button.dataset.id; // Get the user ID
        const currentStatus = button.dataset.status; // Get the current status

        try {
            const response = await fetch(`/admin/status`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: userId, // Pass user ID
                    status: currentStatus === 'active' ? 'blocked' : 'active', // Update status
                }),
            });

            const result = await response.json(); // Parse the JSON response

            if (result.success) {
                // Update the UI dynamically
                const row = button.closest('tr');
                const badge = row.querySelector('.badge');

                if (badge) {
                    badge.textContent = result.status;
                    badge.className = result.status === 'active'
                        ? 'badge text-bg-success'
                        : 'badge text-bg-danger';
                }

                button.textContent = result.status === 'active' ? 'Block' : 'Unblock';
                button.dataset.status = result.status;
            } else {
                swal('Failed to update status');
            }
        } catch (error) {
            console.error('Error updating status:', error);
            swal('Something went wrong');
        }
    });
});


</script>







