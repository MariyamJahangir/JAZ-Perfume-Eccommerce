<script>
    function deleteOffer(offerId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/admin/offers/delete/${offerId}`, { method: "DELETE" })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire("Deleted!", "Offer has been deleted.", "success")
                                .then(() => location.reload());
                        } else {
                            Swal.fire("Error!", "Something went wrong.", "error");
                        }
                    });
            }
        });
    }
</script>

<script>
    document.querySelectorAll('.toggle-status').forEach(toggle => {
        toggle.addEventListener('change', function () {
            const offerId = this.dataset.id;
            const newStatus = this.checked; // true if checked, false if unchecked
            const statusBadge = this.closest('td').querySelector('.status-label'); // Get the badge

            fetch(`/admin/offers/update-status/${offerId}`, {
                method: "PATCH",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ isActive: newStatus })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update badge text and color
                        statusBadge.textContent = newStatus ? "Active" : "Inactive";
                        statusBadge.className = `badge ${newStatus ? "bg-success" : "bg-danger"} me-2 status-label`;

                        Swal.fire({
                            icon: "success",
                            title: "Status Updated",
                            text: `Offer status changed to ${newStatus ? "Active" : "Inactive"}.`
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Update Failed",
                            text: "Could not update offer status."
                        });
                        this.checked = !newStatus; // Revert toggle if update fails
                    }
                })
                .catch(() => {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Something went wrong!"
                    });
                    this.checked = !newStatus;
                });
        });
    });
</script>