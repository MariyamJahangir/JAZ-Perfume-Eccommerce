<script>
    document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("offerForm");
    const offerId = form.dataset.offerId;
    const discountTypeRadios = document.querySelectorAll("input[name='discountType']");
    const maxDiscountField = document.getElementById("maxDiscountField");

    // Function to toggle max discount field
    function toggleMaxDiscount() {
        const selectedType = document.querySelector("input[name='discountType']:checked").value;
        maxDiscountField.style.display = selectedType === "percentage" ? "block" : "none";
    }

    // Add event listeners to discount type radios
    discountTypeRadios.forEach(radio => {
        radio.addEventListener("change", toggleMaxDiscount);
    });

    // Form submission handler
    form.addEventListener("submit", async function (event) {
        event.preventDefault(); // Prevent default form submission

        // Collect form data
        const formData = {
            name: document.querySelector("input[name='name']").value.trim(),
            description: document.querySelector("textarea[name='description']").value.trim(),
            offerType: document.querySelector("select[name='type']").value,
            start: document.querySelector("input[name='start']").value,
            expiry: document.querySelector("input[name='expiry']").value,
            isActive: document.querySelector("select[name='isActive']").value === "true",
            discountType: document.querySelector("input[name='discountType']:checked").value,
            discount: parseFloat(document.querySelector("input[name='discount']").value),
            maxDiscount: parseFloat(document.querySelector("input[name='maxDiscount']").value) || null,
        };

        // Validation
        if (!formData.name) {
            Swal.fire({ icon: "error", title: "Validation Error", text: "Offer name is required." });
            return;
        }
        if (!formData.start) {
            Swal.fire({ icon: "error", title: "Validation Error", text: "Start date is required." });
            return;
        }
        if (!formData.expiry) {
            Swal.fire({ icon: "error", title: "Validation Error", text: "Expiry date is required." });
            return;
        }
        if (new Date(formData.start) >= new Date(formData.expiry)) {
            Swal.fire({ icon: "error", title: "Invalid Date Range", text: "Expiry date must be after start date." });
            return;
        }
        if (formData.discount <= 0) {
            Swal.fire({ icon: "error", title: "Invalid Discount", text: "Discount value must be greater than zero." });
            return;
        }
        if (formData.discountType === "percentage" && !formData.maxDiscount) {
            Swal.fire({ icon: "error", title: "Validation Error", text: "Max discount is required for percentage-based discounts." });
            return;
        }

        // Ensure offerId is available
        if (!offerId) {
            Swal.fire({ icon: "error", title: "Error", text: "Offer ID is missing." });
            return;
        }

        if(formData.discountType === "percentage"){
            if(formData.discount>=100){
                Swal.fire({
                    icon: "error",
                    title: "Validation Error",
                    text: "Discount should be less than 100%.",
                });
                return
            }

        }
        if(formData.discountType === "fixed"){
            if(formData.discount>=2000){
                Swal.fire({
                    icon: "error",
                    title: "Validation Error",
                    text: "Discount should be less than 2000",
                });
                return
            }
        }

        // Update offer via API request
        try {
            const response = await fetch(`/admin/edit-offer/${offerId}`, {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(formData),
            });

            const result = await response.json();

            if (response.ok) {
                Swal.fire({
                    icon: "success",
                    title: "Offer Updated",
                    text: "The offer has been successfully updated!",
                }).then(() => {
                    window.location.href = "/admin/offers"; // Redirect to offers page
                });
            } else {
                Swal.fire({ icon: "error", title: "Error", text: result.message || "Operation failed. Try again!" });
            }
        } catch (error) {
            Swal.fire({ icon: "error", title: "Server Error", text: "An unexpected error occurred. Try again later." });
        }
    });
});

</script>