<script>
    document.addEventListener('click', async function (event) {
        // Check if the clicked element has the class 'btn-delete'
        if (event.target.closest('.btn-delete')) {
            const button = event.target.closest('.btn-delete'); // Get the clicked button
            const row = button.closest('tr'); // Find the closest table row
            const categoryId = row.getAttribute('data-id'); // Get the category ID from the 'data-id' attribute

            // Confirm deletion
            //if (confirm('Are you sure you want to delete this category?')) {
            try {

                const willDelete = await swal({
                    title: "Are you sure?",
                    text: "You won't be able to undo this!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                });

                if (willDelete) {
                    // Send the delete request to the server
                    const response = await fetch(`/admin/delete-category/${categoryId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });

                    const result = await response.json();

                    // Handle the server response
                    if (result.success) {
                        swal(result.message); // Show success message
                        row.remove(); // Remove the row from the DOM
                    } else {
                        swal('Error deleting category'); // Show error message
                    }
                }
            } catch (error) {
                console.error('Error deleting category:', error);
                swal('An error occurred while deleting the category.');
            }
            // }
        }
    });

</script>