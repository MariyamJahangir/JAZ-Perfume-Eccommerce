<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("couponForm");
        const discountTypeRadios = document.querySelectorAll("input[name='discountType']");
        const maxDiscountField = document.getElementById("maxDiscountField");

        // Function to toggle max discount field
        function toggleMaxDiscount() {
            const selectedType = document.querySelector("input[name='discountType']:checked").value;
            maxDiscountField.style.display = selectedType === "percentage" ? "block" : "none";
        }

        // Add event listeners to discount type radios
        discountTypeRadios.forEach(radio => {
            radio.addEventListener("change", toggleMaxDiscount);
        });

        // Form submission handler
        form.addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent default form submission

            // Collect form data
            const formData = {
                name: document.querySelector("input[name='name']").value.trim(),
                code: document.querySelector("input[name='code']").value.trim(),
                description: document.querySelector("textarea[name='description']").value.trim(),
                start: document.querySelector("input[name='start']").value,
                expiry: document.querySelector("input[name='expiry']").value,
                isActive: document.querySelector("select[name='isActive']").value,
                discountType: document.querySelector("input[name='discountType']:checked").value,
                discount: document.querySelector("input[name='discount']").value,
                maxDiscount: document.querySelector("input[name='maxDiscount']").value,
                minAmount: document.querySelector("input[name='minAmount']").value,
                maxAmount: document.querySelector("input[name='maxAmount']").value,
                totalUsageLimit: document.querySelector("input[name='totalUsageLimit']").value,
                maxUsesPerUser: document.querySelector("input[name='maxUsesPerUser']").value,
            };

            // Validation
            
            if (!formData.name) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Coupon name is required." });
                return;
            }
            if (!formData.code) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Coupon code is required." });
                return;
            }
            if (!formData.start) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Start date is required." });
                return;
            }
            if (!formData.expiry) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Expiry date is required." });
                return;
            }
            if (new Date(formData.start) >= new Date(formData.expiry)) {
                Swal.fire({ icon: "error", title: "Invalid Date Range", text: "Expiry date must be after the start date." });
                return;
            }
            if (!formData.discount) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Discount value is required." });
                return;
            }
            if (!formData.minAmount) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Minimum purchase amount is required." });
                return;
            }
            if (!formData.totalUsageLimit) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Total usage limit is required." });
                return;
            }
            if (!formData.maxUsesPerUser) {
                Swal.fire({ icon: "error", title: "Validation Error", text: "Max uses per user is required." });
                return;
            }


            // Ensure expiry date is after start date
            if (new Date(formData.start) >= new Date(formData.expiry)) {
                Swal.fire({
                    icon: "error",
                    title: "Invalid Date Range",
                    text: "Expiry date must be after the start date.",
                });
                return;
            }

            // Ensure discount value is positive
            if (parseFloat(formData.discount) <= 0) {
                Swal.fire({
                    icon: "error",
                    title: "Invalid Discount",
                    text: "Discount value must be greater than zero.",
                });
                return;
            }

            // Ensure max discount is required when percentage is selected
            if (formData.discountType === "percentage" && !formData.maxDiscount) {
                Swal.fire({
                    icon: "error",
                    title: "Validation Error",
                    text: "Please provide a max discount amount for percentage-based discounts.",
                });
                return;
            }

            // Send data to backend
            try {
                const response = await fetch("/admin/add-coupons", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData),
                });

                const result = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: "success",
                        title: "Coupon Added",
                        text: "The coupon has been successfully added!",
                    }).then(() => {
                        window.location.href = "/admin/coupons"; // Redirect to coupons page
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: result.message || "Failed to add coupon. Try again!",
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: "error",
                    title: "Server Error",
                    text: "An unexpected error occurred. Try again later.",
                });
            }
        });
    });
</script>
