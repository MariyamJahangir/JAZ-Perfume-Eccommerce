<script>

    const categoryForm = document.getElementById('categoryForm');
    const categoryImageInput = document.getElementById('images');
    const previewContainer = document.getElementById('preview-container');

    // Display the existing image on page load
    document.addEventListener('DOMContentLoaded', () => {
        const existingImageUrl = categoryImageInput.dataset.existingImage; // Assuming the server sets this as a data attribute
        if (existingImageUrl) {
            previewContainer.innerHTML = ''; // Clear any existing previews

            const imageDiv = document.createElement('div');
            imageDiv.classList.add('position-relative', 'me-2', 'mb-2');

            // Create an image element
            const img = document.createElement('img');
            img.src = existingImageUrl;
            img.classList.add('img-thumbnail');
            img.style.maxWidth = '100px';
            img.style.maxHeight = '100px';

            // Append the image to the container
            imageDiv.appendChild(img);
            previewContainer.appendChild(imageDiv);
        }
    });

    // Display the selected image preview
    categoryImageInput.addEventListener('change', () => {
        previewContainer.innerHTML = ''; // Clear any existing previews

        const file = categoryImageInput.files[0]; // Handle only the first file for a single image
        if (file && file.type.startsWith('image/')) {
            const reader = new FileReader();

            reader.onload = (e) => {
                const imageDiv = document.createElement('div');
                imageDiv.classList.add('position-relative', 'me-2', 'mb-2');

                // Create an image element
                const img = document.createElement('img');
                img.src = e.target.result;
                img.classList.add('img-thumbnail');
                img.style.maxWidth = '100px';
                img.style.maxHeight = '100px';

                // Create a remove button
                const removeButton = document.createElement('button');
                removeButton.type = 'button';
                removeButton.classList.add('btn-close', 'position-absolute', 'top-0', 'end-0');
                removeButton.addEventListener('click', () => {
                    previewContainer.innerHTML = ''; // Clear the preview
                    categoryImageInput.value = ''; // Reset the file input
                });

                // Append the image and remove button to the container
                imageDiv.appendChild(img);
                imageDiv.appendChild(removeButton);
                previewContainer.appendChild(imageDiv);
            };

            reader.readAsDataURL(file); // Read the file for preview
        }
    });

    // Handle form submission
    document.querySelector('form').addEventListener('submit', async (event) => {
        event.preventDefault();
        
        // Prepare FormData for image upload
        const formData = new FormData(categoryForm);
        try {
            const response = await fetch('/admin/edit-category/{{category._id}}', {              
                method: 'POST',
                body: formData, // Pass FormData directly
            });
             
            if (!response.ok) throw new Error('Failed to update category');
            Swal.fire({
                title: 'Success!',
                text: 'Category updated successfully!',
                icon: 'success',
                confirmButtonText: 'OK'
            });
            window.location.href = '/admin/category';
        } catch (error) {
            console.error(error);
            Swal.fire({
                title: 'Error!',
                text: 'Could not update category.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    });








</script>