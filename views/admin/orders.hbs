        {{!-- Content Section --}}
        <div class="col-md-10">

            {{!-- Breadcrumps --}}
            <div class="row px-2 pt-2">
                <div class="col-8">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="link-dark link-underline-opacity-0">Admin</a>
                            </li>
                            <li class="breadcrumb-item active text-dark" aria-current="page">Orders</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-4 d-flex justify-content-end pe-5">
                    <button type="submit" class="btn btn-outline-dark btn-sm"
                        onclick="window.location.href='/admin/logout'">Logout<i
                            class="bi bi-box-arrow-right ps-2"></i></button>
                </div>
            </div>

            {{!-- content box --}}
            <div class="row m-0">
                <div class="containerboxcat mt-4 p-4">


                    <div class="row d-flex justify-content-between align-items-center my-4">
                        <div class="col-3">
                            <h3 class="fw-bold">Orders</h3>
                        </div>
                        <div class="col-4">
                            <form>
                                <div class="input-group search-input">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input class="form-control border-start-0" type="search" placeholder="Search"
                                        aria-label="Search">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-between align-items-center border-top border-bottom p-2">
                        <div class="col-1">
                            <i class="bi bi-arrow-down-up"></i>
                        </div>
                        <div class="col-2">
                            <span>Order</span>
                        </div>
                        <div class="col-2">
                            <span>customer</span>
                        </div>
                        <div class="col-2">
                            <span>Date</span>
                        </div>
                        <div class="col-2">
                            <span>Total</span>
                        </div>
                        <div class="col-2">
                            <span>Status</span>
                        </div>
                        <div class="col-1">
                            <span>Action</span>
                        </div>
                    </div>

                    {{#each orders}}
                    {{#each this.items}}
                    <div class="row d-flex justify-content-between align-items-center p-2 border-bottom">
                        <!-- Product Image -->
                        <div class="col-1">
                            <img src="/uploads/{{this.productId.images.[0]}}" alt="Product Image" style="width: 100%;">
                        </div>

                        <!-- Product Name -->
                        <div class="col-2">
                            <span>{{this.productId.name}}</span>
                        </div>

                        <!-- User Name (Fetched from order) -->
                        <div class="col-2">
                            <span>{{../userId.firstname}} {{../userId.lastname}}</span>
                        </div>

                        <!-- Order Date (Fetched from order) -->
                        <div class="col-2">
                            <span>{{formatDate ../orderDate}}</span>
                        </div>

                        <!-- Price -->
                        <div class="col-2">
                            <span>Rs. {{this.price}}</span>
                        </div>

                        <!-- Order Status -->
                        <div class="col-2">
                            <span class="badge 
                {{#if (isEqual this.status 'Completed')}}text-bg-success
                {{else if (isEqual this.status 'Pending')}}text-bg-warning
                {{else if (isEqual this.status 'Cancelled')}}text-bg-danger
                {{else}}text-bg-secondary{{/if}}">
                                {{this.status}}
                            </span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-1 text-center">
                            <a href="/admin/order-detail/{{../_id}}?productId={{this.productId._id}}"
                                class="btn btn-outline-primary btn-sm my-1">View</a>
                            {{!-- <button type="button" class="btn btn-outline-danger btn-sm my-1">Cancel</button> --}}
                        </div>
                    </div>
                    {{/each}}
                    {{/each}}



                </div>
            </div>
