        </div>


        {{!-- Content Section --}}
        <div class="col-md-10">

            {{!-- Breadcrumps --}}
            <div class="row px-2 pt-2">
                <div class="col-8">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="link-dark link-underline-opacity-0">Admin</a>
                            </li>
                            <li class="breadcrumb-item active text-dark" aria-current="page">Orders</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-4 d-flex justify-content-end pe-5">
                    <button type="submit" class="btn btn-outline-dark btn-sm"
                        onclick="window.location.href='/admin/logout'">Logout<i
                            class="bi bi-box-arrow-right ps-2"></i></button>
                </div>
            </div>

           

            <div class="row m-0">
                <div class="containerboxcat mt-4 p-4">
                    <div class="col-3 pb-3">
                        <h3 class="fw-bold">Orders</h3>
                    </div>

                    


                    <table id="orderTable" class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total Amount</th>
                                <th>Payment Method</th>
                                <th>Payment Status</th>
                                <th>Order Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            
                            <tr>
                                <td>{{orderId}}</td>
                                <td>{{userId.firstname}} {{userId.lastname}}</td>
                                <td data-order="{{dateFormat orderDate "DD-MM-YYYY HH:mm:ss"}}">{{dateFormat orderDate "DD/MM/YYYY"}}</td>
                                <td data-order="{{finalAmount}}">Rs. {{finalAmount}}</td>
                                <td>{{payment.method}}</td>
                                <td>
                                    <span
                                        class="badge {{#if (isEqual payment.status 'Paid')}}text-bg-success{{else}}{{#if (isEqual payment.status 'Failed')}}text-bg-danger{{else}}text-bg-warning{{/if}}{{/if}}">
                                        {{payment.status}}
                                    </span>
                                </td>
                                <td>
                                    <span
                                        class="badge {{#if (isEqual orderStatus 'Completed')}}text-bg-success{{else}}{{#if (isEqual orderStatus 'Processing')}}text-bg-info{{else}}text-bg-secondary{{/if}}{{/if}}">
                                        {{orderStatus}}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="/admin/order-detail/{{_id}}"
                                        class="btn btn-outline-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>
            </div>




        </div>
    </div>



</section>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        
        $('#orderTable').DataTable({
            paging: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            order: [[2, 'desc']],
        });
    });
</script>